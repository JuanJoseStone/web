<style>
.ionicon {
  width: 48px;
  height: 48px;
}
.ionicon-figma {
  width: 34px;
  height: 34px;
  border-radius: 50%;
}

.animate-social {
  transition: all 0.5s;
  @apply dark:fill-white;
}
.animate-social.ionicon-figma {
  background: black;
  fill: white;
  @apply dark:bg-white;
  @apply dark:fill-stone-900;
  margin-top: 4px;
}
.animate-social:hover {
  transform: translateY(-5px);
}
@media (min-width: 768px) {
  .animate-social:hover {
    transform: translateX(5px);
  }
}

.social-networks {
  transition: all 0.5s;
  fill: white;
}
.social-networks.ionicon-figma {
  background: white;
  /* @apply dark:bg-black; */
  fill: hsl(0, 0%, 10%);
  margin-left: 4px;
}
.social-networks:hover {
  transform: translateY(-5px);
}
</style>